@model Books

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h1 class="text-center">Delete User Account</h1>
                </div>
                <div class="card-body">
                    <form asp-controller="BookManagement" asp-action="DeleteConfirmed" asp-route-id="@Model.id" method="post">


                        <div class="mb-3">
                            <label asp-for="book_title" class="form-label">Title</label>
                            <input asp-for="book_title" type="text" class="form-control" readonly />
                            <span asp-validation-for="book_title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="book_author" class="form-label">Author</label>
                            <input asp-for="book_author" type="text" class="form-control" readonly />
                            <span asp-validation-for="book_author" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="book_category" class="form-label">Category</label>
                            <input asp-for="book_category" type="text" class="form-control" readonly />
                            <span asp-validation-for="book_category" class="text-danger"></span>
                        </div>

                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#loginModal">Delete</button>

                        <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header bg-dark text-white">
                                        <h5 class="modal-title" id="exampleModalLabel">Delete Confirmation</h5>
                                        <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete this item?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Yes</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>
                    <a href="javascript:history.back()" class="text-center d-block mt-3">← Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
